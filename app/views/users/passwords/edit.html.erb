<div class="container" style="margin-left: 35%;">
  <h2 class="center-text" style="margin-left: 5%;">Change your password</h2>

  <div class="row" style="padding-top: 10px;">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), 
                                                        :html => {:method => :put, class: 'form-horizontal'}) do |f| %>

        <%= f.input :reset_password_token, :as => :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
          <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: 'btn-primary' %>
        </div>
    <% end %>
  </div>

  <div class="text-center" style="width: 40%;">
    <%= render "users/shared/links" %>
  </div>

</div>

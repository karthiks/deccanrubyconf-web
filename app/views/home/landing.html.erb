<html>
<head>
  <title>
    DeccanRubyConf
  </title>
  <%= javascript_include_tag "application" %>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jcarousel/0.3.1/jquery.jcarousel.js"></script>

  <style type="text/css">
      .subnav {
          text-align: center;
          opacity: 0.7;
      }

      .subnav a {
          display: inline-block;
          margin: 10px;
          color: #fff;
      }

      .dIB {
          display: inline-block;
      }

      .textAlignCenter {
          text-align: center;
      }

      .headingWrapper {
          color: #fff;
          background-color: #dd0017;
          min-height: 300px;
      }

      .shareWrapper {
          color: #ccc;
          min-height: 40px;
          font-weight: bold;
          vertical-align: middle;
          padding: 10px;
          line-height: 44px;
      }

      .sloganCarousel {
          background-color: #ccc;
          color: #000;
          min-height: 100px;
      }

      .speakerWrapper {
          font-size: 17px;
          color: #333;
          line-height: 20px;
      }

      .sneakpeakTxt {
          padding: 30px;
      }

      .speaker {
          height: 350px;
          width: 317px;
      }

      .font22 {
          font-size: 22px;
      }

      .font14 {
          font-size: 14px;
      }

      .margin15 {
          margin: 15px;
      }

      #bookTicket, #bcumSponsor {
          border: 1px solid #fff;
          border-radius: 3px;
          padding: 5px;
          font-size: 12px;
          margin: 10px;
      }

      .twIcon {
          background: url('/assets/deccanRubySprite.jpg') height : 30 px;
          width: 30px;
          display: inline-block;
          background-size: 30px 30px;
      }

      .twIconSmall {
          background: url('/assets/deccanRubySprite.jpg') height : 10 px;
          width: 10px;
          display: inline-block;
          background-size: 10px 10px;
      }

      .bgBlue {
          height: 50px;
          width: 50px;
          text-align: center;
          vertical-align: middle;
      }

      .bgBlue:hover {
          background-color: blue;
      }

      body {
          width: 980px;
          margin: 0 auto;
          text-align: center;
          vertical-align: middle;
      }

      .speakerName {
          padding: 10px;
          color: #dd0017;
          font-weight: 300;
      }

      .speakerDesg {
          font-size: 14px;
          color: #666;
      }

      .jcarousel {
          position: relative;
          overflow: hidden;
      }

      .jcarousel ul {
          width: 20000em;
          position: relative;
          list-style: none;
          margin: 0;
          padding: 0;
      }

      .jcarousel li {
          float: left;
      }

      .deccanRubySprite {
          background: url('/assets/deccanRubySprite.jpg') no-repeat scroll 0 0 transparent;
      }

      .smallIcons {
          height: 20px;
          width: 20px;
          display: inline-block;
      }

      .fbSmallIcon {
          background-position: 0px 0px;
      }

      .fbSmallIcon:hover {
          background-position: 0px -23px;
      }

      .inSmallIcon {
          background-position: -25px 0px;
      }

      .inSmallIcon:hover {
          background-position: -25px -23px;
      }

      .twSmallIcon {
          background-position: -52px 0;
      }

      .twSmallIcon:hover {
          background-position: -52px -23px;
      }

      .gitSmallIcon {
          background-position: -77px 0;
      }

      .gitSmallIcon:hover {
          background-position: -77px -23px;
      }
  </style>
</head>
<body>
<div class="headingWrapper">
  <div class="subnav textAlignCenter">
    <a href="javascript:void(0);">Schedule</a>
    <a href="javascript:void(0);">Speakers</a>
    <a href="javascript:void(0);">Workshop</a>
    <a href="javascript:void(0);">Contact</a>
    <a href="javascript:void(0);">Sponsorship</a>
    <a href="javascript:void(0);">Venue</a>
  </div>
  <div class="textAlignCenter">
    <%= image_tag "header-logo.png", { height: "100", width: "200" } %>

    <div class="font22 margin15">22nd-23rd June, 2014</div>
    <div class="font14">Save this date to your calendar for<br/>firstever Deccan RubyConf</div>
    <div class="btnSection textAlignCenter">
      <div id="bookTicket" class="dIB">BOOK TICKETS NOW</div>
      <div id="bcumSponsor" class="dIB font14">BECOME A SPONSOR</div>
    </div>
  </div>
</div>
<div class="shareWrapper font22 textAlignCenter">
  FOLLOW US ON
  <div class="dIB bgBlue"><span class="twIcon"></span></div>
  <div class="dIB bgBlue"><span class="twIcon"></span></div>
  <div class="dIB bgBlue"><span class="twIcon"></span></div>

  <div>
  </div>
  <div class="jcarousel textAlignCenter">
    <ul>
      <li>1</li>
      <li>2</li>
      <li>3</li>
    </ul>
  </div>

  <div class="speakerWrapper">
    <div class="textAlignCenter sneakpeakTxt">
      Here is the Sneak-Peak of Invited/Speakers<br/>
      for Deccan RubyConf 2014
    </div>
    <div class="speaker dIB">
      <%= image_tag "speakers/vipul.jpg", { height: "200", width: "200", style: "border-radius: 100px;" } %>

      <div class="speakerName">Vipul A M</div>
      <div class="speakerDesg">Designer</div>
      <div class="shareIcons">
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons fbSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons inSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons twSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons gitSmallIcon"></a></div>
      </div>
    </div>
    <div class="speaker dIB">
      <%= image_tag "speakers/vipul.jpg", { height: "200", width: "200", style: "border-radius: 100px;" } %>

      <div class="speakerName">Vipul A M</div>
      <div class="speakerDesg">Designer</div>
      <div class="shareIcons">
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons fbSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons inSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons twSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons gitSmallIcon"></a></div>
      </div>
    </div>
    <div class="speaker dIB">
      <%= image_tag "speakers/vipul.jpg", { height: "200", width: "200", style: "border-radius: 100px;" } %>

      <div class="speakerName">Vipul A M</div>
      <div class="speakerDesg">Designer</div>
      <div class="shareIcons">
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons fbSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons inSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons twSmallIcon"></a></div>
        <div class="dIB"><a href="" class="deccanRubySprite smallIcons gitSmallIcon"></a></div>
      </div>
    </div>
  </div>
</div>

<div>
  <img src=""/>
</div>
<script src="http://d3js.org/colorbrewer.v1.min.js"></script>
<script type="text/javascript">
    var t = new Trianglify({
                x_gradient: colorbrewer.Reds[Math.floor(Math.random() * 9) + 1],
                y_gradient: colorbrewer.Reds[Math.floor(Math.random() * 9) + 1],
                noiseIntensity: 0.1,
                cellpadding: 10,
                cellsize: 100}),
            header = ('.headingWrapper');
    var pattern = t.generate(document.body.clientWidth, document.body.clientHeight);
    $(header).attr('style', 'background-image: ' + pattern.dataUrl);
    $('.jcarousel').jcarousel({
        transitions: true,
        wrap: 'both'
    });
</script>
</body>
</html>
